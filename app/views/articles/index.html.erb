<h1 style="text-align: center; color: #666;">文章列表</h1>
 
<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '编辑', edit_article_path(article) %></td>
      <td><%= link_to '查看', article_path(article) %></td>
      <td><%= link_to '删除', article_path(article),
                              method: :delete, data: {confirm: "确定删除该文章？" }%></td>
    </tr>
  <% end %>
</table>

<%= link_to "前往创建文章", new_article_path %>